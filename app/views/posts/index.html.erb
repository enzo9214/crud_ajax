<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to 'Destroy', post_path(post),
              method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <td id="posts"></td>
  </tbody>
</table>

  <%= form_with model: Post.new do |f| %>
    <%= f.text_field :title , :id => "texto" %>
    <%= f.submit :Enviar %>
  <% end %>

<br>

